# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[{*.json,*.yml}]
indent_style = space

[{*.md,*.markdown}]
trim_trailing_whitespace = false
max_line_length = off

[{package.json,package-lock.json}]
indent_size = 2
