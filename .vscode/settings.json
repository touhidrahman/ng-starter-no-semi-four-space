{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "typescript.format.semicolons": "remove",
    "javascript.format.semicolons": "remove",
    "prettier.semi": false,
    "importSorter.importStringConfiguration.hasSemicolon": false,
    "eslint.options": {
        "extensions": [".ts", ".html"]
    },
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html"],
    "editor.defaultFormatter": "biomejs.biome",
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "quickfix.biome": "explicit",
            "source.organizeImports.biome": "explicit"
        },
        "editor.formatOnSave": false
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "quickfix.biome": "always",
            "source.organizeImports.biome": "always"
        },
        "editor.formatOnSave": false
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        },
        "editor.formatOnSave": false
    },
    "[html]": {
        "editor.defaultFormatter": "stringham.angular-template-formatter",
        "editor.formatOnSave": true
    },
    "[javascript][typescript]": {
        "editor.codeActionsOnSave": {
            "quickfix.biome": "explicit",
            "source.organizeImports.biome": "explicit"
        }
    },
    "angular-schematics.schematicsDefaultOptions": {
        "angular-*": {
            "style": "scss",
            "externalTemplate": true
        },
        "angular-component": {
            "skipChangeDetectionOnPush": true,
            "ngOnInit": false
        },
        "angular-page": {
            "skipChangeDetectionOnPush": true,
            "skipNgOnInit": false
        }
    }
}
